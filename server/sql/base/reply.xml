<!-- /server/sql/base/reply.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reply">
	<select id="selectreply">
		SELECT
		*
		FROM
		ptj_sub1.replies
		WHERE rno =#{rno}
	</select>
    <select id="allreply">
		SELECT
		*
		FROM
		ptj_sub1.replies
	</select>
     <select id="selectreplym">
		SELECT
		*
		FROM
		ptj_sub1.replies
        WHERE m_id =#{m_id}
	</select>
    <select id="selectbno">
		SELECT
		*
		FROM
		ptj_sub1.replies
        WHERE bno=#{bno}
	</select>
	<insert id="insertreply">
		INSERT INTO ptj_sub1.replies
		(
		replytext
		)
		VALUES
		(
        #{replytext}
		);
	</insert>
    <delete id = "deletereply">
        DELETE
        FROM ptj_sub1.replies
        WHERE rno =#{rno}
    </delete>
    <update id ="updatereply">
        UPDATE ptj_sub1.replies
        SET replytext =#{replytext}, updatedate=#{updatedate}
        WHERE rno =#{rno}
    </update>
</mapper>
