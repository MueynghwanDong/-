<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BARN">
	<select id="selectbarn">
		SELECT
		*
		FROM
		ptj_sub1.barns
		WHERE b_id = #{b_id}
	</select>
	<select id="selectmember">
		SELECT
		*
		FROM
		ptj_sub1.barns
		WHERE m_id = #{m_id}
	</select>
    <select id="allbarn">
		SELECT
		*
		FROM
		ptj_sub1.barns
	</select>
	<insert id="insertbarn">
		INSERT INTO ptj_sub1.barns
		(
		b_id,
		m_id
		)
		VALUES
		(
		#{b_id},
		#{m_id}
		);
	</insert>
    <delete id = "deletebarn">
        DELETE
        FROM ptj_sub1.barns
        WHERE b_id =#{b_id}
    </delete>
    <update id ="updatebarn">
        UPDATE ptj_sub1.barns
        SET temperature =#{temperature}, humidity=#{humidity}, ch4=#{ch4}, co2 =#{co2}
        WHERE b_id =#{b_id}
    </update>
    <update id ="updatecount">
        UPDATE ptj_sub1.barns
        SET count = count+1
        WHERE b_id =#{b_id}
    </update>
</mapper>
